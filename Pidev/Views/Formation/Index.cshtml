@model IEnumerable<data.formation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdv.cshtml";
}

<div class="content-wrapper">
    <div class="content-heading">
        <div>Data Tables<small></small></div>
    </div>
    <div class="container-fluid">
        <!-- DATATABLE DEMO 1-->
        <div class="card">
            <div class="card-header">
                <div class="card-title"></div>
                <div class="text-sm"></div>
            </div>
            <div class="card-body">
                <table class="table table-striped my-4 w-100" id="datatable2">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                               Training_name
                            </th>

                            <th>
                               type
                            </th>
                            <th>
                               description
                            </th>
                            </th>
                            <th>
                                duration
                            </th>
                           
                            <th>
                               Available Places
                            </th>

                        </tr>
                    </thead>
                    @foreach (var item in ViewBag.result)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.type</td>
                            <td>@item.description</td>

                            <td>@item.description</td>
                            <td>@item.duration</td>
                            <td>@item.nbPlaceDispo</td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @{ int id = @item.id;}
                                <a href="@Url.Action("Delete", "Formation", new {id=@item.id})" class="btn btn-danger">Delete</a>
                            </td>
                          

                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>