@model Pidev.Models.FormateurModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdv.cshtml";
}
<h2>Create</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">
        <div class="content-heading">
            <div>
                Add Trainer<small>..</small>
            </div>
        </div>

        <!-- START card-->
        <div class="card card-default">

            <div class="card-body">
                <form styleClass="form-horizontal">

                    <fieldset>
                        
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Trainer name:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </fieldset>
                    <fieldset></fieldset>


                    <fieldset>
                        
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Trainer speciality:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.specialite, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.specialite, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </fieldset>

                    <fieldset>
                      
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Trainer number:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.number, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </fieldset>



                    <fieldset>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Trainer disponibilite:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.disponibilite, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.disponibilite, "", new { @class = "text-danger" })
                            </div>
                        </div>
</fieldset>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                                <i class="fa fa-fw fa-plus"></i>
                            </div>
                        </div>
</form>
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>