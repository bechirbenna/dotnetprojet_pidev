@model Pidev.Models.SkillModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdv.cshtml";
}
@using (Html.BeginForm())
{
    <div class="content-wrapper">
        <div class="content-heading">
            <div>
                Edit a skill<small></small>
            </div>
        </div>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.skillId)

            
            <div class="form-group">
                <label class="col-md-2 col-form-label">Nom :</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.skillName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.skillName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 col-form-label">Description :</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.skillDesc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.skillDesc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 col-form-label">Date :</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.skillDate, new { @type = "date", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.skillDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>

}