@model Pidev.Models.SkillModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdv.cshtml";
}
<h2>Create</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">
        <div class="content-heading">
            <div>
                Add Skill<small>..</small>
            </div>
        </div>

        <!-- START card-->
        <div class="card card-default">

            <div class="card-body">
                <form styleClass="form-horizontal">

                    <fieldset>
                        <legend>Skill name</legend>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Skill name:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.skillName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.skillName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </fieldset>
                    <fieldset></fieldset>


                    <fieldset>
                        <legend>Skill description</legend>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Skill description:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.skillDesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.skillDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </fieldset>
                    @*<fieldset>
                        <legend>Skill date</legend>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Skill date:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.skillDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.skillDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </fieldset>*@
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                            <i class="fa fa-fw fa-plus"></i>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>