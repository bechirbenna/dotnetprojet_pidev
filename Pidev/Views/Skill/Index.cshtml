@model IEnumerable<data.skill>

@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_LayoutAdv.cshtml";
}
<div class="content-wrapper">
    <div class="content-heading">
        <div>
            Skill<small></small>
        </div>
    </div>
    <p><div class="btn btn-light">
    @Html.ActionLink("Create new skill", "Create")
</div>

<div class="content-wrapper">
    <div class="container-fluid">
        <!-- DATATABLE DEMO 1-->
        <div class="card">
            <div class="card-body">
                <table class="table table-striped my-4 w-100" id="datatable2">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in ViewBag.result){
                        <tr>
                            <td>@item.skillId</td>
                            <td>@item.skillName</td>
                            <td>@item.skillDesc</td>
                            <td>
                                @{ long skillId = @item.skillId;}
                                <a href="@Url.Action("Edit", "Skill",new {id=@item.skillId})" class="btn btn-success">Edit</a>
                            </td>
                            <td>
                                @{ long skillIdd = @item.skillId;}
                                <a href="@Url.Action("Delete", "Skill",new {id=@item.skillId})" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>