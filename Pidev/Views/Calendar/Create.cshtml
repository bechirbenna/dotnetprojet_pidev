@model data.calendar

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdv.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-wrapper">
        <div class="content-heading">
            <div>
                Add Event<small>..</small>
            </div>
        </div>

        <!-- START card-->
        <div class="card card-default">

            <div class="card-body">
                <form styleClass="form-horizontal">
                    <fieldset>
                        <legend>Ticket name</legend>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Event name:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NomEvent, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NomEvent, "", new { @class = "text-danger" })
                            </div>

                        </div>

                    </fieldset>
                    <fieldset></fieldset>

                    <fieldset>
                        <legend>Begin Date:</legend>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Begin Date:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DateDebut, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DateDebut, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </fieldset>
                    <fieldset></fieldset>
                    <fieldset>
                        <legend>End Date:</legend>
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">End Date:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DateFin, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DateFin, "", new { @class = "text-danger" })
                            </div>

                        </div>

                    </fieldset>
                    <fieldset></fieldset>
                    <fieldset>
                        <div class="form-group row mb-2">
                            <label class="col-md-2 col-form-label mb-2">DateTimePicker</label>
                            <div class="col-xl-6 col-10">
                                <div class="input-group date" id="datetimepicker1"><input class="form-control" type="text"><span class="input-group-append input-group-addon"><span class="input-group-text fas fa-calendar-alt"></span></span></div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>

                </form>
            </div>
        </div>

    </div>

}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
