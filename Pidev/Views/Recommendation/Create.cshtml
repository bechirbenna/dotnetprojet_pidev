@model data.recommendation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdv.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="content-wrapper">
        <div class="content-heading">
            <div>
                Create a recommendation<small></small>
            </div>
        </div>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-md-2 col-form-label">Date :</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.recDate, new { @type = "date", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.recDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 col-form-label">Description :</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.recDesc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.recDesc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        </div>
        }

        
