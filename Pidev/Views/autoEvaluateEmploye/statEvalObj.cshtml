@{
    ViewBag.Title = "statEvalObj";
    Layout = "~/Views/Shared/_LayoutAdv.cshtml";
}


<div class="content-wrapper">

    <div class="content-heading">Stat Eval</div>


    <div class="card card-default">
        <div class="card-header" style="text-align : center;"><h2>Evaluation's mark averge</h2></div>
        <div class="card-body text-center">
            <div class="row">
                @foreach (var emp in ViewBag.users)
                {
                    string Color = "";
                    var pourc = @Pidev.Controllers.autoEvaluateEmployeController.pourcentageObj(emp.id);
                    if (pourc <= 25)
                        Color = "danger";
                    else if (pourc <= 50 && pourc > 25)
                        Color = "warning";
                    else if (pourc <= 75 && pourc > 50)
                        Color = "info";
                    else if (pourc <= 100 && pourc > 75)
                        Color = "success";


                    <div class="col-lg-4">

                        <div class="radial-bar radial-bar-@pourc radial-bar radial-bar-@Color">
                            <span style="color:black;"> @pourc%</span><img src="@Url.Content("~/Content/images/" + @emp.firstName + ".jpg")" alt="Image">

                        </div>

                    </div>
                }

            </div>
        </div>
    </div><!-- END card-->

    <div class="row">
        <div class="col-xl-4">
            <!-- START card-->
            <div class="card border-0">
                <div class="card-body">
                    <div class="d-flex">
                        <h3 class="text-muted mt-0">300</h3><em class="ml-auto text-muted fa fa-coffee fa-2x"></em>
                    </div>
                    <div class="py-4" data-sparkline="" data-type="line" data-height="80" data-width="100%" data-line-width="2" data-line-color="#7266ba" data-spot-color="#888" data-min-spot-color="#7266ba" data-max-spot-color="#7266ba" data-fill-color="" data-highlight-line-color="#fff" data-spot-radius="3" data-values="1,2,3,4,5,6,7,8" data-resize="true"></div>
                    <p><small class="text-muted">Actual progress</small></p>
                    <div class="progress progress-xs mb-5">
                        <div class="progress-bar bg-info progress-bar-striped" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%"><span class="sr-only">80% Complete</span></div>
                    </div>
                </div>
            </div><!-- END card-->
        </div>
    </div>


</div>

<style>
    .radial-bar {
        position: relative;
        display: inline-block;
        font-size: 16px;
        border-radius: 50%;
        border: 2px solid #fafafa;
        background-color: transparent;
        margin-bottom: 20px;
        box-sizing: content-box;
        width: 150px;
        height: 150px;
        font-size: 18px;
    }

        .radial-bar:after, .radial-bar > img {
            width: 110px;
            height: 110px;
            margin-left: 20px;
            margin-top: 20px;
            line-height: 56px;
        }
</style>